<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:DependencyScannerDotnet.App.GuiLayer.Controls"
                    xmlns:viewModel="clr-namespace:DependencyScannerDotnet.App.GuiLayer.ViewModel">

    <DataTemplate DataType="{x:Type viewModel:PackageUpgradeViewModel}">
        <controls:PackageUpgradeControl />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type viewModel:ScanResultViewModel}">
        <controls:ScanResultControl />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type viewModel:SelectProjectDirectoryViewModel}">
        <controls:SelectProjectDirectoryControl />
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewModel:SelectProjectSourceViewModel}">
        <controls:SelectProjectSourceControl />
    </DataTemplate>
    
</ResourceDictionary>